{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://my-app-domain/schemas/booklist",
  "title": "BookList",
  "description": "Book List Schema Document",
  "type": "object",
  "required": [
    "id",
    "title",
    "author_last_name",
    "publication_year",
    "location"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "author_first_name": {
      "type": "string"
    },
    "author_last_name": {
      "type": "string"
    },
    "publication_year": {
      "type": "number"
    },
    "series_name": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "bookcase": {
      "type": "number"
    },
    "bookshelf": {
      "type": "number"
    },
    "imagePath": {
      "type": "string"
    },
    "tracking": {
        "type": "object",
        "properties": {
            "uuid": {
            "type": "string",
            "format": "uuid"
        },
            "createdDate": {
                "type": "string"
        },
            "updatedDate": {
                "type": "string"
        }
        }
    },
    "comments": {
      "type": "array",
      "items": {
        "type": "object",
          "properties": {
            "name": { "type": "string" },
            "comment": { "type": "string" },
            "commentDate": { "type": "string" },
            "commentId": { 
              "type": "string",
              "format": "uuid"
            }
          }
      }
    }
  }
}
